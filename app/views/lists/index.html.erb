<div class="banner-container" style="position: relative;">
  <%= image_tag("cine.jpg", class: "img-fluid banner-image") %>
  <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
    <h1 class="fw-bold">Coolest Watch List</h1>
    <%= link_to "Start Navigating", lists_path, class: "btn btn-light my-2 my-sm-0 w-100" %>
  </div>
</div>
<div class="container py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-warning" %>
  </div>
  <div class="row">
  <% @lists.each do |list| %>
    <div class="co-12 col-sm-6 col-md-4 mb-3">
      <%= link_to list_path(list), class:"text-decoration-none" do %>
        <div class="card-category">
          <% if list.photo.attached? %>
            <%= image_tag list.photo, class: "img-fluid" %>
          <% end %>
          <div class="card-category-name">
            <%= list.name %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
